<UserControl x:Class="MyDartsManager.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyDartsManager.UserControls"
             mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundColor}">
        <Button Style="{StaticResource DartsButtonStyle}" Name="matchHistoryBtn" Content="Match history" Click="matchHistoryBtnOnClick" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Style="{StaticResource DartsButtonStyle}" Name="playerListBtn" Content="Player list" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Click="playerListBtnOnClick"/>
        <Button Style="{StaticResource DartsButtonStyle}" Name="newMatchBtn" Content="New match" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Click="newMatchBtnOnClick"/>
        <Button Style="{StaticResource DartsButtonStyle}" Name="trainingBtn" Content="Training" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Click="trainingBtnClick"/>

    </Grid>
</UserControl>
